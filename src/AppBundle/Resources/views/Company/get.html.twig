{%  extends '::base.html.twig' %}
{% block body %}
    <h2>Details</h2>
    <p>{{ company.name }} ({{ company.marketId }})</p>
    <p>Current price: {{ price }}</p>
    <h2>Reports available</h2>
    {% for report in reports %}
        <p>
            <a href="{{ path('report_show', {'marketId': company.marketId, 'identifier': report.identifier|date("Y-m-d"), 'period': report.period}) }}">
                {{ report }}
            </a>
        </p>
    {% endfor %}
    <a href="{{ path('report_add') }}">add report</a>

    <h2>Price history</h2>
    {% for pastPrice in prices %}
        <p>{{ pastPrice }} ({{ pastPrice.identifier|date("Y-m-d") }})</p>
    {% endfor %}
{% endblock %}
