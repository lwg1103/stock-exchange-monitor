{%  extends '::base.html.twig' %}
{% block body %}
	<div class="row wrapper border-bottom white-bg page-heading ibox-content">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('homepage_index') }}">Home</a>
                </li>
                <li>
                    <a href="{{ path('company_index') }}">Companies</a>
                </li>
                <li>
                	{{ company.name }} ({{ company.marketId }})
                </li>
            </ol>
        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox product-detail">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-3">
                            	<h2 class="font-bold m-b-xs">
                                    {{ company.name }} ({{ company.marketId }})
                                </h2>
                                <div class="m-t-md">
                                    <h2 class="product-main-price">{{ price }} z≈Ç</h2>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <h3>Price history</h3>
                                {% for pastPrice in prices %}
                                    <div class="col-md-6">{{ pastPrice }} ({{ pastPrice.identifier|date("Y-m-d") }})</div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    	</div>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox product-detail">
                    <div class="ibox-content">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Report</th>
                                    <th>Income</th>
                                    <th>Net Profit</th>
                                    <th>Op. Net Profit</th>
                                    <th>Book Value</th>
                                    <th>Assets</th>
                                    <th>Liabilities</th>
                                    <th>Current Assets</th>
                                    <th>Current Liabilities</th>
                                    <th>Shares #</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for report in reports %}
                                    <tr>
                                        <td>{{ report }}</td>
                                        <td>{{ report.income|reportPrice }}</td>
                                        <td>{{ report.netProfit|reportPrice }}</td>
                                        <td>{{ report.operationalNetProfit|reportPrice }}</td>
                                        <td>{{ report.bookValue|reportPrice }}</td>
                                        <td>{{ report.assets|reportPrice }}</td>
                                        <td>{{ report.liabilities|reportPrice }}</td>
                                        <td>{{ report.currentAssets|reportPrice }}</td>
                                        <td>{{ report.currentLiabilities|reportPrice }}</td>
                                        <td>{{ report.sharesQuantity }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox product-detail">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-6">
                            	<h3>Reports available <small><a href="{{ path('report_add') }}"><i class="fa fa-plus"></i> add report</a></small></h3>
                                {% for report in reports %}
                                    <div class="col-lg-12">
                                        <a href="{{ path('report_show', {'marketId': company.marketId, 'identifier': report.identifier|date("Y-m-d"), 'period': report.period}) }}">
                                            {{ report }}
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="col-md-6">
                                <h3>Dividends</h3>
                                {% for dividend in dividends %}
                                    <div class="col-lg-12">{{ dividend }}</div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
