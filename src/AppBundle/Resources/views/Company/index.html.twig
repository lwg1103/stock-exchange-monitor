                                <td>
                                    <input id="czy-max" type="number"/>
                                </td>
                                <td>
                                    <input id="cz4q-max" type="number"/>
                                </td>
                                <td>
                                    <input id="cz7y-max" type="number"/>
                                </td>
                                <td>
                                    <input id="cwk-max" type="number"/>
                                </td>
                                <td>
                                    <input id="czcwk-max" type="number"/>
                                </td>
                                <td>
                                    <input id="div-max" type="number"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    	<div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <h2 class="font-bold m-b-xs">
                        Companies
                    </h2>
                    <table id="companies-table" class="table table-striped">
                        <thead>
                        <tr>
                            <th>GPW Market ID</th>
                            <th>Full Name</th>
                            <th>Current Price</th>
                            <th>C/Z Last Year</th>
                            <th>C/Z Last 4Q</th>
                            <th>C/Z Last 7Y</th>
                            <th>C/WK Last Year</th>
                            <th>C/Z*C/WK Last Year</th>
                            <th>Dividend % Last 7Y</th>
                            <th>No Losses Last 7Y</th>
                            <th>Details</th>
                        </tr>
                        </thead>
                        {% for company in companies %}
                            <tr>
                                <th scope="row">
                                    <a href="{{ path('company_get', {'marketId': company.data.marketId}) }}">
                                        {{ company.data.marketId }} <small>({{ company.data.longMarketId }})</small>
                                    </a>
                                </th>
                                <td>{{ company.data.name }}</td>
                                <td>{{ company.price }}</td>
                                <td>{{ company.CZ_last_year|colored_indicator( craue_setting(constant('Setting\\Entity\\Setting::SETTING_INDICATOR_CZ1Y')) )|raw  }}</td>
                                <td>{{ company.CZ_last_4q|colored_indicator( craue_setting(constant('Setting\\Entity\\Setting::SETTING_INDICATOR_CZ1Y')) )|raw  }}</td>
                                <td>{{ company.CZ_last_7y|colored_indicator( craue_setting(constant('Setting\\Entity\\Setting::SETTING_INDICATOR_CZ7Y')) )|raw  }}</td>
                                <td>{{ company.CWK_last_year|colored_indicator|raw }}</td>
                                <td>{{ company.CZCWK_last_year|colored_indicator( craue_setting(constant('Setting\\Entity\\Setting::SETTING_INDICATOR_CZCWK')) )|raw }}</td>
                                <td>{{ company.div_rate_last_7y|colored_indicator( craue_setting(constant('Setting\\Entity\\Setting::SETTING_PARAMETER_NTB_RATE')), true )|raw }}</td>
                                <td>{{ company.no_losses|no_loss|raw }}</td>
                                <td>
                                    <a href="{{ path('company_get', {'marketId': company.data.marketId}) }}">
                                        <i class="fa fa-search"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
    
                </div>
            </div>
        </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        var table = $('#companies-table').DataTable();

        $('#filter-apply').click( function() {

            $.fn.dataTable.ext.search.push(
                    function( settings, data, dataIndex ) {
                        return (
                            checkNumberColumn(data, 'czy', 3) &&
                            checkNumberColumn(data, 'cz4q', 4) &&
                            checkNumberColumn(data, 'cz7y', 5) &&
                            checkNumberColumn(data, 'cwk', 6) &&
                            checkNumberColumn(data, 'czcwk', 7) &&
                            checkNumberColumn(data, 'div', 8) &&
                            checkCheckboxColumn(data, 'noloss', 9)
                        )
                    }
            );

            table.draw();
        } );



//        $(document).ready(function(){
//            var table = $('#companies-table').DataTable();
//        });

        function checkNumberColumn(data, name, index) {
            var min = ($('#'+name+'-min').val() ? $('#'+name+'-min').val() : -9999);
            var max = ($('#'+name+'-max').val() ? $('#'+name+'-max').val() : 9999);
            var value = parseFloat( data[index] ) || 0;

            if ( min <= value && value <= max )
            {
                return true;
            }
            return false;
        }

        function checkCheckboxColumn(data, name, index) {
            var enabled = $('#'+name)[0].checked;
            var value = data[index];

            return (!enabled || enabled && value === 'OK');
        }
    </script>
{% endblock %}
