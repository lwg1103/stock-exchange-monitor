{%  extends '::base.html.twig' %}
{% block body %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Companies</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('homepage_index') }}">Home</a>
                </li>
                <li>
                    Companies
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>
    <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>GPW Market ID</th>
                                <th>Full Name</th>
                                <th>Current Price</th>
                                <th>C/Z Last Year</th>
                                <th>C/Z Last 4Q</th>
                                <th>Info</th>
                            </tr>
                            </thead>
                            {% for company in companies %}
                                <tr>
                                    <th scope="row">{{ company.data.marketId }} <small>({{ company.data.longMarketId }})</small></th>
                                    <td>{{ company.data.name }}</td>
                                    <td>{{ company.price }}</td>
                                    <td>{{ company.CZ_last_year }}</td>
                                    <td>{{ company.CZ_last_4q }}</td>
                                    <td>
                                        <a href="{{ path('company_get', {'marketId': company.data.marketId}) }}">
                                            Details
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>

                    </div>
                </div>
            </div>
    
{% endblock %}
