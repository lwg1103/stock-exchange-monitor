{%  extends '::base.html.twig' %}
{% block body %}
    <div class="row wrapper border-bottom white-bg page-heading ibox-content">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('homepage_index') }}">Home</a>
                </li>
                <li>
                    Company Groups
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>
    <div class="wrapper wrapper-content">
    	<div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <h2 class="font-bold m-b-xs">
                        Company Groups
                    </h2>
                    <table id="companies-table" class="table table-striped">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Details</th>
                        </tr>
                        </thead>
                        {% for group in groups %}
                            <tr>
                                <th scope="row">
                                    <a href="{{ path('company_group_get', {'id': group.id}) }}">
                                        {{ group.id }}
                                    </a>
                                </th>
                                <td>
                                    <a href="{{ path('company_group_get', {'id': group.id}) }}">
                                        {{ group.name }}
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ path('company_group_get', {'id': group.id}) }}">
                                        {{ group.typestring }}
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ path('company_group_get', {'id': group.id}) }}">
                                        <i class="fa fa-search"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
        </div>
    </div>
{% endblock %}
